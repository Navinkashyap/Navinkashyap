<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="bold-text">Create a New Listing</h3>

    <br>
    <form method="POST" action="/listings" 
    novalidate class="needs-validation"
     enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label"><b>Title</b></label>
        <input id="title" name="listing[title]" placeholder="Add a catchy title"
         type="text" class="form-control" required />
        <!-- <div class="invaid-feedback">wrong Right!</div> -->
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"><b>Description</b></label>
        <textarea id="description" name="listing[description]" class="form-control" required></textarea>
        <!-- <div class="invaid-feedback">Please Enter a valid description</div> -->
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"><b>Upload Image</b></label>
        <input id="image" name="listing[image]"

        type="file" class="form-control" required/>
        
      </div>

      <div class="mb-3">
        <label for="price" class="form-label"><b>Price</b></label>
        <input id="price" name="listing[price]" placeholder="enter price" 
        type="number" 
        class="form-control" required />
        
        <!-- <div class="invaid-feedback">Please Enter a valid price</div> -->
      </div>

      <div class="mb-3">
        <label for="country" class="form-label"><b>Country</b></label>
        <input id="country" name="listing[country]" placeholder="enter country" 
        type="text" class="form-control" required />
        <!-- <div class="invaid-feedback">Please Enter a valid Country</div> -->
      </div>

      <div class="mb-3">
        <label for="location" class="form-label"><b>Location</b></label>
        <input id="location" name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
        <!-- <div class="invaid-feedback">Please Enter a valid location</div> -->
      </div>
    
      <button class="btn btn-dark btn-lg add-btn">Add</button>
    </form>
  </div>
</div>
